{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "mfCharacters/MfCharacters": ["src/remotes/StandaloneCharactersApp.tsx"],
      "mfCharacterDetail/MfCharacterDetail": ["src/remotes/StandAloneCharacterDetailApp.tsx"],
      "@images/*": ["src/assets/images/*"],
      "@components/*": ["src/components/*"],
      "@remotes/*": ["src/remotes/*"],
      "@routes/*": ["src/routes/*"],
      "@styles/*": ["src/styles/*"],
    },
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
}
